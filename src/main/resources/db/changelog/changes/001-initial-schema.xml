<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Create Fournisseur table -->
    <changeSet id="001-create-fournisseur-table" author="abdelatif">
        <createTable tableName="fournisseurs">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="raison_sociale" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="adresse" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="ville" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="ice" type="VARCHAR(15)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="personne_contact" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="telephone" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create Produit table -->
    <changeSet id="002-create-produit-table" author="abdelatif">
        <createTable tableName="produits">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="reference" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="nom" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="prix_unitaire" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="categorie" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="stock_actuel" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="point_commande" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="unite_mesure" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create CommandeFournisseur table -->
    <changeSet id="003-create-commande-fournisseur-table" author="lahcen">
        <createTable tableName="commande_fournisseur">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="numero_commande" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="fournisseur_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="date_commande" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="date_livraison_prevue" type="DATE"/>
            <column name="date_livraison_effective" type="DATE"/>
            <column name="statut" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="montant_total" type="DECIMAL(12,2)" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="notes" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="commande_fournisseur"
                baseColumnNames="fournisseur_id"
                constraintName="fk_commande_fournisseur"
                referencedTableName="fournisseurs"
                referencedColumnNames="id"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>
    </changeSet>

    <!-- Create LigneCommande table -->
    <changeSet id="004-create-ligne-commande-table" author="tricol">
        <createTable tableName="ligne_commande">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="commande_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="produit_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="quantite" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="prix_unitaire" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="sous_total" type="DECIMAL(12,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="ligne_commande"
                baseColumnNames="commande_id"
                constraintName="fk_ligne_commande_commande"
                referencedTableName="commande_fournisseur"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="ligne_commande"
                baseColumnNames="produit_id"
                constraintName="fk_ligne_commande_produit"
                referencedTableName="produits"
                referencedColumnNames="id"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>
    </changeSet>

    <!-- Add indexes for performance -->
    <changeSet id="009-add-performance-indexes" author="tricol">
        <createIndex tableName="commande_fournisseur" indexName="idx_commande_fournisseur_statut">
            <column name="statut"/>
        </createIndex>

        <createIndex tableName="commande_fournisseur" indexName="idx_commande_fournisseur_date">
            <column name="date_commande"/>
        </createIndex>

        <createIndex tableName="produits" indexName="idx_produit_categorie">
            <column name="categorie"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>